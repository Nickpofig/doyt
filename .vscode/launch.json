	"version": "0.2.0",
	"configurations": [
		{
			"name": "run project builder",
			"type": "lldb",
			"request": "launch",
			"program": "${workspaceFolder}\\build.exe",
			"args": ["project.build"],
			"preLaunchTask": "compile builder"
		},
		{
			"name": "run glad builder",
			"type": "lldb",
			"request": "launch",
			"program": "./build",
			"args": ["./deps/glad/glad.build"],
			"preLaunchTask": "compile builder"
		},
	]
}